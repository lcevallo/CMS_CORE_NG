</div>

<!-- Modal Add Role-->
<div class="modal fade" id="AddRoleModal" role="dialog" aria-labelledby="AddRoleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form id="AddRoleModalForm">
            <div class="modal-content">
                <div class="modal-header">
